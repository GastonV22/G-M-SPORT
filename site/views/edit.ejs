<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximun-scale=1.0, minimun-scale=1.0">
    <title>G M SPORTS</title>
    <link rel="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="stylesheet" href="../public/css/registro.css">
    <script src="https://kit.fontawesome.com/ed7192d074.js" crossorigin="anonymous"></script>
    
        <%- include('partials/head.ejs') %>
   
</head>
    <body>
        
        <%- include('partials/header.ejs') %>
                
        <main class="list">
            <div class="errors">
                <% if (typeof errors != "undefined") { %>
                    <ul>
                        <% for (let i =0; i < errors.length; i++) { %>
                          <li class="erroritem">
                              <%=errors[i].msg%>
                          </li>
                        <% } %>
                      </ul>
                <% } %>
              </div>
   
           <form class="formulario" action="/products/edit/<%=productos.id%>?_method=PUT" method="POST"enctype="multipart/form-data">
            <h2>EDITAR PRODUCTO</h2>
            <h1><%=productos.name%></h1>
           <input type="text"name ="name" placeholder="name"value=' <%=productos.name%>'> 
           <input type="text"name="marca" placeholder="marca"value=' <%=productos.marca%>'> 
           <input type="text"name="descripcion" placeholder="descripcion"value=' <%=productos.descripcion%>'> 
           <input type="text"name="stock" placeholder="stock"value=' <%=productos.stock%>'>
           <input type="text"name="precio" placeholder="precio"value=' <%=productos.precio%>'>
           <div class="input-contenedor"></div>
                   <i class="fas fa-envelope icon "></i>
                   <input type="file"name="avatar" placeholder="avatar"value=' <%=productos.avatar%>'> 
               <a href="/products/edit/<%=productos.id%>"> 
            <input type="submit" value="EDITAR" class="button"></a> 
       </form>
       </main>
       

       <script src="/js/editarProducto.js"></script>
<footer><%- include('partials/footer.ejs') %> </footer> 

</body>