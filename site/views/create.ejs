<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('partials/head.ejs') %>
  </head>
  <link rel="stylesheet" href="/css/productoadd.css">
<body>
  <%- include('partials/header') %>
 <main>  
  <div class="errors">
    <% if (typeof errors != "undefined") { %>
        <ul>
            <% for (let i =0; i < errors.length; i++) { %>
              <li class="erroritem">
                  <%=errors[i].msg%>
              </li>
            <% } %>
          </ul>
    <% } %> 

  </div>  
  <form class="formulario" action="/products/create" method="POST"enctype="multipart/form-data">
     <h2>AGREGAR PRODUCTO</h2>
    <input type="text"name ="name" placeholder="name"> 
    <input type="text"name="marca" placeholder="marca"> 
    <input type="text"name="descripcion" placeholder="descripcion"> 
    <input type="text"name="stock" placeholder="stock">
    <input type="text"name="precio" placeholder="precio">
     
    <div class="input-contenedor"></div>
            
            <input type="file"name="avatar" placeholder="avatar"> 
            
    <textarea name="comentario" id="comntario" cols="30" rows="10" placeholder="comntarios"></textarea>
    <input type="submit" value="Enviar" class="button">
</form>
</main>
<script src="/js/cargaProducto.js"></script>
<footer> <%- include('partials/footer.ejs') %> </footer> 

</body>
</html>
